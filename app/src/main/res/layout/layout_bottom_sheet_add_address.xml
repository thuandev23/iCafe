<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/define_dimen_10"
    tools:ignore="Autofill,LabelFor"
    tools:viewBindingIgnore="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_address"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_xnormal"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_30"
        android:text="@string/label_full_name"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:padding="@dimen/define_dimen_12"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="@string/label_phone"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:padding="@dimen/define_dimen_12"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_small" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_16"
        android:text="@string/label_address"
        android:textSize="@dimen/text_size_small" />

    <EditText
        android:id="@+id/edt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_5"
        android:background="@drawable/bg_white_corner_16_border_gray"
        android:drawableEnd="@drawable/map"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="@dimen/define_dimen_14"
        android:paddingEnd="40dp"
        android:textColor="@color/black"
        android:textColorHint="@color/textColorAccent"
        android:textSize="@dimen/text_size_small"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/tv_address_latitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_address_longitute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/define_dimen_30"
        android:layout_marginBottom="@dimen/define_dimen_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/define_dimen_10"
            android:layout_weight="1"
            android:background="@drawable/bg_button_disable_corner_16"
            android:gravity="center"
            android:padding="@dimen/define_dimen_10"
            android:paddingStart="@dimen/define_dimen_16"
            android:paddingEnd="@dimen/define_dimen_16"
            android:text="@string/action_cancel"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_button_enable_corner_16"
            android:gravity="center"
            android:padding="@dimen/define_dimen_10"
            android:text="@string/action_add"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>
