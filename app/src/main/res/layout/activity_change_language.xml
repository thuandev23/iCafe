<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgFilter"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/define_dimen_10"
        android:text="@string/text_choose_language"
        android:textSize="@dimen/text_size_normal" />

    <LinearLayout
        android:id="@+id/btn_change_language_vn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/define_dimen_20"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/vn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_10"
            android:text="Vietnamese"
            android:textColor="@color/textColorHeading"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/define_dimen_20"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:layout_marginEnd="@dimen/define_dimen_20"
        android:background="@color/textColorDescription" />

    <LinearLayout
        android:id="@+id/btn_change_language_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/define_dimen_16"
        android:layout_marginTop="@dimen/define_dimen_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/define_dimen_10">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/en" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/define_dimen_16"
            android:text="English"
            android:textColor="@color/textColorHeading"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>
</LinearLayout>